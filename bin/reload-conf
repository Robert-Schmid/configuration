#!/bin/sh


# alacritty

cp ~/.config/kitty/kitty.conf ~/configuration/config/kitty
cp ~/.config/kitty/afterglow.conf ~/configuration/config/kitty

# broot

cp ~/.config/broot/conf.hjson ~/configuration/config/broot

# git

cp ~/.gitconfig ~/configuration/config/git
mv -f ~/configuration/config/git/.gitconfig ~/configuration/config/git/gitconfig


# zsh

cp ~/.zshrc ~/configuration/config/zsh/
mv ~/configuration/config/zsh/.zshrc ~/configuration/config/zsh/zshrc

cp ~/.zshenv ~/configuration/config/zsh/
mv ~/configuration/config/zsh/.zshenv ~/configuration/config/zsh/zshenv

# ssh

#cp ~/.ssh/config ~/configuration/config/ssh
